
<h1>Fun Panel</h1>

<!-- Incoming bookings -->

    <h3>Fun Provider</h3>
    <p>Please make sure you respond to all incoming requests</p>

    <ul>
      <% @bookings_provided.each do |booking| %>
      <li>
        <%= booking.name %> |
        <%= booking.address %> |
        <%= booking.start_date %> |
        <%= booking.end_date %> |
        <%= booking.status %> |
        <% if booking.status == "pending" %>
        <div class="btn-dashboard"> <%= link_to "Approve", toy_booking_path(booking.toy, booking, execute: "approved"), method: :put %>
        </div>
        <div class="btn-dashboard">
          <%= link_to  "Decline", toy_booking_path(booking.toy, booking, execute: "declined"), method: :put %>
        </div>
        <% end %>
        <% end %>
      </li>
    </ul>

<!-- List all of User Bookings with respecive status -->
    <h3>Toys I booked</h3>

    <ul>
      <% @bookings.each do |booking| %>
      <li>
        <%= booking.name %> |
        <%= booking.address %> |
        <%= booking.start_date %> |
        <%= booking.end_date %> |
        <%= booking.status %>
      </li>
      <% end %>
    </ul>

<!-- List all toys user listed -->
<h3>Toy Stash</h3>
<p>See which of your toys are for hire and where your toys currently are:</p>

<ul>
  <% current_user.toys.each do |toy| %>
  <li>
    <%= toy.name %> |
    <%= toy.description %> |
    <%= toy.price_usd %> |
    <%= cl_image_tag toy.image.path, height: 50, crop: :fill  %>

    <!-- Iterate on toy.bookings -->
    <ul>
      <% toy.bookings.each do |booking| %>
      <li>
        Booked on:
        <%= booking.start_date %> -
        <%= booking.end_date %> by
        <%= booking.user.first_name %> for
        "<%= booking.name %>"
      </li>
      <!-- If a toy has been rented out, owner can see where it is on static map -->
      <% if booking.status == "approved" %>
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=400x300&sensor=false&maptype=roadmap&markers=color:red|#{booking.address}" %>
      <% end %>
      <% end %>
    </ul>
  </li>
  <% end %>
</ul>
